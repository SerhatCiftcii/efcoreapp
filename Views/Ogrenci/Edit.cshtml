@model Ogrenci
<h2>Öğrenci Edit</h2>
    <hr>

    <div class="row">
<div class="col-8">
<form asp-controller="Ogrenci" asp-action="Edit" method="post">
    <input type="hidden" asp-for="OgrenciId">
    <div class="mb-3">
        <label asp-for="OgrenciAd" class="form-label fw-bold">Ogrenci Ad</label>
        <input asp-for= "OgrenciAd" class="form-control w-50">
    </div>

     <div class="mb-3">
        <label asp-for="OgrenciSoyad" class="form-label fw-bold">Ogrenci Soyad</label>
        <input asp-for= "OgrenciSoyad" class="form-control w-50">
    </div>

 <div class="mb-3">
        <label asp-for="Eposta" class="form-label fw-bold">Eposta</label>
        <input asp-for= "Eposta" class="form-control w-50">
    </div>


 <div class="mb-3">
        <label asp-for="Telefon" class="form-label fw-bold">Telefon</label>
        <input asp-for= "Telefon" class="form-control w-50">
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>

</form>  
</div>
<div class="col-4">
    <h4>Kurslar</h4>
    <hr>
    <ul>
        @foreach(var item in @Model.KursKayitlari)
        {
            <li>@item.Kurs.Baslık</li>
        }
    </ul>
</div>
</div>


