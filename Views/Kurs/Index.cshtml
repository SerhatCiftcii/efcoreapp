@model IEnumerable<Kurs>
    <h2>Kurs Listesi</h2>
     <a href="/Kurs/Create" class="btn btn-primary">Kurs Ekle</a>
    <hr>
    <table class="table table-bordered">
       
        <thead>
            <tr>
              <th style="width: 150px;">@Html.DisplayNameFor(m=>m.KursId)</th>
              <th>@Html.DisplayNameFor(m=>m.Baslık)</th>
                <th>@Html.DisplayNameFor(m=>m.Ogretmen.AdSoyad)</th>
              <th style="width: 150px;"></th>

            </tr>
        </thead>
    <tbody>
        @foreach(var item in Model){

      //2 kullanımda var  DisplayFor değer almak için , @Html.DisplayNameFor(m=>m.OgrenciSoyad) ismini almak için modelin 
        <tr>
                <td>@item.KursId</td>
                <td>@Html.DisplayFor(modelItem=>item.Baslık) </td>
                <td>@Html.DisplayFor(modelItem=>item.Ogretmen.AdSoyad) </td>
                
                <td>
                    <a asp-controller="Kurs" asp-action="Edit" asp-route-id="@item.KursId" class="btn btn-sm btn-primary">Edit</a>
                     <a asp-controller="Kurs" asp-action="Delete" asp-route-id="@item.KursId" class="btn btn-sm btn-danger">Delete</a>
                </td>

        </tr>
  }
    </tbody>

    </table>