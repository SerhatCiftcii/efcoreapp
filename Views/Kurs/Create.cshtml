@model KursViewModel
<h2>Kurs Ekle</h2>
    <hr>
<form asp-controller="Kurs" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Baslık" class="form-label fw-bold">Baslık</label>
        <input asp-for= "Baslık" class="form-control w-50">
    </div>
    <div class="mb-3">
        <label asp-for="OgretmenId" class="form-label">Öğretmen</label>
        <select asp-for="OgretmenId" asp-items=" ViewBag.Ogretmenler" class="form-select">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>

</form>  
