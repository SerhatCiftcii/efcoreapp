@model Ogretmen
<h2>Öğretmen Edit</h2>
    <hr>

    <div class="row">
<div class="col-8">
<form asp-controller="Ogretmen" asp-action="Edit" method="post">
  <div class="mb-3">
    <input type="hidden" asp-for="OgretmenId">
        <label asp-for="Ad" class="form-label fw-bold">Ogretmen Adı</label>
        <input asp-for= "Ad" class="form-control w-50">
    </div>

     <div class="mb-3">
        <label asp-for="Soyad" class="form-label fw-bold">Ogretmen Soyad</label>
        <input asp-for= "Soyad" class="form-control w-50">
    </div>

 <div class="mb-3">
        <label asp-for="Eposta" class="form-label fw-bold">Eposta</label>
        <input asp-for= "Eposta" class="form-control w-50">
    </div>


 <div class="mb-3">
        <label asp-for="Telefon" class="form-label fw-bold">Telefon</label>
        <input asp-for= "Telefon" class="form-control w-50">
    </div>
    <div class="mb-3">
        <label asp-for="BaslamaTarihi" class="form-label fw-bold">BaslamaTarihi</label>
        <input asp-for= "BaslamaTarihi" class="form-control w-50">
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>

</form>  
</div>

</div>


